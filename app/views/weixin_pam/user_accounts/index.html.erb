<p id="notice"><%= notice %></p>

<h1>Listing User Accounts</h1>

<table>
  <thead>
    <tr>
      <th>Public account</th>
      <th>Uid</th>
      <th>Nickname</th>
      <th>Headshot</th>
      <th>Subscribed</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @user_accounts.each do |user_account| %>
      <tr>
        <td><%= user_account.public_account %></td>
        <td><%= user_account.uid %></td>
        <td><%= user_account.nickname %></td>
        <td><%= user_account.headshot %></td>
        <td><%= user_account.subscribed %></td>
        <td><%= link_to 'Show', user_account %></td>
        <td><%= link_to 'Edit', edit_user_account_path(user_account) %></td>
        <td><%= link_to 'Destroy', user_account, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

